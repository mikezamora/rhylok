{
  "name": "extism-plugin-example",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:wasm": "vite build --config vite.config.wasm.ts",
    "preview": "vite preview",
    "preview:wasm": "vite preview  --config vite.config.wasm.ts",
    "build:all": "npm run build && npm run build:wasm",
    "serve:all": "npx concurrently \"npm run preview\" \"npm run preview:wasm\""
  },
  "devDependencies": {
    "vite": "^7.1.2",
    "typescript": "~5.8.3",
    "vite-plugin-extism": "workspace:*"
  },
  "dependencies": {
    "@extism/extism": "^2.0.0-rc13"
  }
}
